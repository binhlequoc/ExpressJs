mixin header(user)
    .header.container-fluid
        .container.px-0
            .navbar.row.align-items-center
                .left.col-1
                    a#logo(href="/feeds") Fotobook
                .nav-main.d-flex.w-75.col-10.justify-content-between.px-0
                    form.w-50(action="", method="post") 
                        input.h-100.w-100.px-2(type='text',placeholder="search photo/album")
                    .user.d-flex.align-items-center
                        if user
                            img(src=`/${user.image}`, alt="")
                            a.ms-2(href="")=user.firstName+" "+user.lastName
                        
                        
                        
                .right.col-1.d-xl-block
                    if user
                        a(href="/auth/logout") Logout 
                    else
                        a(href="/auth/signin") Login 