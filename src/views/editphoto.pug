doctype html
html(lang="en")
    include ./block/head.pug        
    body 
             
        include ./block/header.pug
        include ./block/menu.pug
        +header()
        .content.container-fluid
            .container.px-0
                .navbar.row
                    +menu(menu)
                            
                    .content-main.col-10.py-4
                        form.add-new(method="POST",action="/photos",enctype="multipart/form-data")
                            .new-photo-text
                                h3 New Photo
                            .new-photo-content
                                .npc-left
                                    .npc-title  
                                        label(for="title") Title
                                        input(type="text",placeholder="Photo Title", id="title", name="title",value=title)
                                    .npc-sharing
                                        label Sharing mode
                                        select(name="sharingMode",value=isPublic)
                                            if isPublic
                                                option(value=true,selected) Public
                                                option(value=false) Private
                                            else
                                                option(value=true) Public
                                                option(value=false,selected) Private
                                .npc-right
                                    .npc-desc
                                        label(for="desc") Description
                                        textarea(name="desc", cols="30", rows="10",type="text", id="desc")=description
                            .new-photo-add
                                label(for="add-image")
                                    i.fa-solid.fa-plus
                                input(type="file",src="img_submit.gif" id="add-image",name="file")
                            .new-photo-submit
                                button(type="submit") Update
                                button(class="delete") Delete
  
                    .right.col-1
                        
        
        include ./block/popup.pug
        include ./block/script.pug
        
