mixin post(name,post_link,summary_content,number_like,date_post)
    .post                            
        .image-post
            img(src="img/icon.jpg", alt="", srcset="" )
            img(src="img/icon.jpg", alt="", srcset="" )
            img(src="img/icon.jpg", alt="", srcset="" )
        .content-post
            .user-post
                img(src="img/icon.jpg", alt="", srcset="")
                a.ms-2(href="")=name
            a.post-link(href="")=post_link
            p=summary_content
            .more
                .like
                    i.fa-solid.fa-heart
                    p=number_like
                .date-post 
                    p=date_post