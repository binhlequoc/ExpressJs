doctype html
html(lang="en")
    include ./block/head.pug        
    body 
             
        include ./block/header.pug
        include ./block/menu.pug
        +header(user)
        .content.container-fluid
            .container.px-0
                .navbar.row
                    +menu(menu)
                            
                    .content-main.col-10.py-4
                        form.add-new(method="POST",action="/photos",enctype="multipart/form-data")
                            .new-photo-text
                                h3 New Photo
                            .new-photo-content
                                .npc-left
                                    .npc-title  
                                        label(for="title") Title
                                        input(type="text",placeholder="Photo Title", id="title", name="title")
                                    .npc-sharing
                                        label Sharing mode
                                        select(name="sharingMode")
                                            option(value=true) Public
                                            option(value=false) Private
                                .npc-right
                                    .npc-desc
                                        label(for="desc") Description
                                        textarea(name="desc", cols="30", rows="10",type="text", id="desc")
                            .new-photo-add
                                .new-photo-button
                                    label(for="add-image")
                                        i.fa-solid.fa-plus
                                        img
                                    input(type="file",src="img_submit.gif" id="add-image",name="file")
                            .validate
                                if(validate)
                                    for v in validate
                                        p(class="validate-text")="* "+v
                            .new-photo-submit                                
                                button(type="submit") Save
  
                    .right.col-1
                        
        
        include ./block/popup.pug
        include ./block/script.pug
        
